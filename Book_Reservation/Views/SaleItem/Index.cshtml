@model IEnumerable<Book_Reservation.Models.SaleItem>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="pricing-header p-2 pb-md-2 mx-auto text-center">
        <h1 class="display-6 text-center mb-4">SaleItem</h1>
        <p class="fs-5 text-body-secondary">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-sharp fa-light fa-plus fa-2xl" style="color: #ffffff;"></i> Create New
            </a>
        </p>
    </div>

    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Seq)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InsertBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InsertDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sale.SaleCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book.BookName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Seq)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BookNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BookTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsertBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsertDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sale.SaleCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Book.BookName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.SaleItemId" class="btn btn-sm btn-primary">
                                    <i class="fa fa-sharp fa-light fa-pen"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.SaleItemId" class="btn btn-sm btn-danger">
                                    <i class="fa fa-sharp fa-light fa-trash-can"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10">No records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model Person
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="container">
    <div class="image-section">
        <img src="/Images/hl_library_roger-harris2022.jpg" alt="Image Placeholder" class="login-image">
    </div>
    <div class="login-section">
        <form asp-controller="Person" asp-action="Login" method="post" class="login-form">
            <h2 class="login-title">Login</h2>
            <div class="form-group">
                <label asp-for="PersonCode">Username:</label>
                <input asp-for="PersonCode" class="form-control" placeholder="Enter your username" value="@TempData["PreservedPersonCode"]">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Enter your password">
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <button type="submit" class="btn btn-primary">Login</button>

            <div class="register-link">
                <p>Don't have an account? <a asp-controller="Person" asp-action="Register">Register</a></p>
            </div>
           
        </form>
    </div>
</div>

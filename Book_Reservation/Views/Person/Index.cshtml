@model IEnumerable<Book_Reservation.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="pricing-header p-2 pb-md-2 mx-auto text-center">
        <h1 class="display-6 text-center mb-4">Member</h1>
        <p class="fs-5 text-body-secondary">
            <div class="text-right">
                <a class="btn btn-primary" asp-action="Create">สมัครสมาชิก</a>
            </div>
            
        </p>
    </div>

    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonTel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InsertBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InsertDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdateDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonTel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsertBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsertDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-sm btn-primary">
                                <i class="fa fa-sharp fa-light fa-pen"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PersonId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-sm btn-danger">
                                <i class="fa fa-sharp fa-light fa-trash-can"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9">No records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
